<div class="container">
  <%= simple_form_for [@r_booking] do |f| %>
    <div class="container_one">
      <%= f.input :day, as: :date %>
      <%= f.input :numberofguest %>
      <%= f.input :restaurantname %>
      <%= f.input :guestname %>
      <%= f.input :typeofreservation %>
      <%= f.datetime_field :tablebookingtime%>
      <%= f.submit "Book", class: "btn btn-ghost rent" %>
    </div>
  <% end %>
</div>
